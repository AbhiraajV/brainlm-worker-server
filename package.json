{
  "name": "brainlm-backend",
  "version": "1.0.0",
  "description": "Minimal backend with Prisma, Node.js, and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "validate": "ts-node scripts/validate.ts",
    "dev": "ts-node src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "test": "ts-node src/tests/run-tests.ts",
    "test:all": "ts-node src/tests/run-tests.ts all",
    "test:queue": "ts-node src/tests/integration/queue.test.ts",
    "test:chain": "ts-node src/tests/integration/worker-chain.test.ts",
    "test:scheduler": "ts-node src/tests/integration/scheduler.test.ts",
    "test:e2e": "ts-node src/tests/e2e/full-flow.test.ts",
    "typecheck": "tsc --noEmit",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "node-cron": "^4.2.1",
    "openai": "^6.16.0",
    "p-limit": "^7.2.0",
    "prisma": "^6.19.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/node-cron": "^3.0.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.4.5"
  }
}
